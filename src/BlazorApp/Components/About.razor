<section class="light" id="about">
    @if (_hero is not null)
    {
        <img class="background" src="@(_hero.Src)" alt="@(_hero.Alt)" />
    }
    <h2>Sobre mim</h2>
    <div style="background-color: white; width: 50%; padding: 4rem; margin: 3rem auto; text-align: center;">
    @if (_aboutMe is null)
    {
        <p><em>Carregando...</em></p>
    }
    else
    {
        <p class="large">@_aboutMe.Description</p>
        <hr />
        <ul style="text-align: left; columns: 2; font-size: 1.25rem; margin: 2rem 3rem; gap: 3rem;">
        @foreach (var skill in _aboutMe.Skills)
        {
            <li key="@skill">@skill</li>
        }
        </ul>
        <hr />
        <p style="padding: 1rem 3rem 0;">@_aboutMe.DetailOrQuote</p>
    }
    </div>
</section>


